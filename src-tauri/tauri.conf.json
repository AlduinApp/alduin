{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Alduin",
    "version": "3.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPDATA",
          "$APPDATA/*",
          "$APPCONFIG/*"
        ]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "appimage", "msi", "updater"],
      "identifier": "io.stouder.alduin",
      "publisher": "StouderIO",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "copyright": "Â© 2023 Xavier Stouder",
      "category": "News",
      "shortDescription": "Alduin is a feed reader.",
      "longDescription": "Alduin is a feed reader supporting RSS, Atom and JSON feeds."
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "width": 800,
        "height": 800,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "center": true,
        "transparent": true
      },
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Alduin",
        "width": 800,
        "height": 600,
        "minWidth": 200,
        "minHeight": 200,
        "decorations": false,
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://alduin.stouder.io/update/{{target}}/{{arch}}/{{version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNEQUQ2MTY4NERDRTc0QUIKUldTcmRNNU5hR0d0UFphQ0Y0ZXBhVG9IRWsxcFNwUTlMWjBoKytkUld1ZFpFcnBOZFNWRHh5bmUK"
    },
    "cli": {
      "args": [
        {
          "name": "autostart",
          "short": "a"
        }
      ]
    }
  }
}
